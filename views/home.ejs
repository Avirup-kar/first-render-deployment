<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Homepage</title>


    <style>
    .container {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
    }

    .card {
      margin-bottom: 1rem;
    }
    .card-img-top {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }
    </style>
</head>
<body>
    <%- include('./partials/navbar.ejs') %>
    <div class="container mt-5">
      <% blogs.forEach(blog => { %>
      <div class="card" style="width: 18rem">
        <img src="<%= blog.coverpic %>" class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title"><%= blog.title %></h5>
          <a href="/blogs/<%= blog._id %>" class="btn btn-primary">View</a>
        </div>
      </div>
      <% }) %>
    </div>
    <%- include('./partials/scripts.ejs') %>
</body>
</html>